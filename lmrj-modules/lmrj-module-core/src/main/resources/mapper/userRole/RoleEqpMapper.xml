<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lmrj.core.userRole.mapper.RoleEqpMapper" >

    <sql id="Base_Column_List" >
       t.id,
       t.eqp_id,
       t.role_id
	</sql>

    <select id="getEqpByRoleList" resultType="com.lmrj.core.userRole.entity.IotRoleEqp">
       select
       <include refid="Base_Column_List"></include>
       from iot_role_eqp
       where role_id in
       <foreach collection="roleIdList" index="index" item="role" close=")" separator="," open="(">
           #{role}
       </foreach>
    </select>
</mapper>